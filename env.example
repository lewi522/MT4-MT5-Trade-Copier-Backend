# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=development
PORT=3000
SERVER_URL=http://localhost:3000

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=copy_trading
DB_USER=postgres
DB_PASS=your_database_password

# ===========================================
# Authentication & Security
# ===========================================
# JWT Secret Key
SECRET_KEY=your_jwt_secret_key_here

# RSA Key Pair for API encryption (Base64 encoded)
PRIVATE_KEY=your_rsa_private_key_base64
PUBLIC_KEY=your_rsa_public_key_base64

# ===========================================
# MetaTrader Bridge API
# ===========================================
MT4_API_URL=http://your-mt4-bridge-url
MT5_API_URL=http://your-mt5-bridge-url

# ===========================================
# Payment Gateway (Cryptomus)
# ===========================================
MERCHANT_ID=your_cryptomus_merchant_id
PAYMENT_API_KEY=your_cryptomus_payment_api_key
PAYOUT_API_KEY=your_cryptomus_payout_api_key

# ===========================================
# Email Service (EmailJS)
# ===========================================
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID_VERIFY=your_verify_email_template_id
EMAILJS_TEMPLATE_ID_CODE=your_verification_code_template_id
EMAILJS_TEMPLATE_ID_NOTIFICATION=your_notification_template_id
EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_PRIVATE_KEY=your_emailjs_private_key

# ===========================================
# CORS & Frontend Configuration
# ===========================================
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

